<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net10.0-windows10.0.19041.0</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
      <ApplicationIcon>Assets\PLAI.ico</ApplicationIcon>      
      <SupportedOSPlatformVersion>10.0.19041.0</SupportedOSPlatformVersion>
      <Platforms>x64</Platforms>

      <!-- Force x64 -->
    <RuntimeIdentifier>win-x64</RuntimeIdentifier>
    <Platforms>x64</Platforms>

    <!-- MSIX Packaging -->
    <WindowsPackageType>MSIX</WindowsPackageType>
    <GenerateAppxPackageOnBuild>true</GenerateAppxPackageOnBuild>
    <AppxPackageSigningEnabled>false</AppxPackageSigningEnabled>
    <PublishSingleFile>false</PublishSingleFile>

    <!-- Output behavior -->
    <SelfContained>true</SelfContained>
    <Configurations>Release</Configurations>
    <ApplicationIcon>Assets\PLAI.ico</ApplicationIcon>

      <!-- âœ… DPI Awareness Manifest -->
    <ApplicationManifest>app.manifest</ApplicationManifest>

  </PropertyGroup>

  <ItemGroup>
      <PackageReference Include="Microsoft.ML.OnnxRuntimeGenAI" Version="0.12.0" />
  </ItemGroup>

  <ItemGroup>
      <!-- Deterministic, reviewable model catalog (single source of truth) -->
      <EmbeddedResource Include="Data\ModelCatalog\ModelCatalog.manifest.json" LogicalName="PLAI.ModelCatalog.manifest.json" />
  </ItemGroup>

</Project>
